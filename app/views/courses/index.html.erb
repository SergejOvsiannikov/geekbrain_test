<h2>Courses list</h2>
<table>
  <tr>
    <th>Name</th>
    <th><%= sortable "nearest lesson" %></th>
    <th>Students count</th>
    <th></th>
  </tr>

  <% @courses.each do |course| %>
    <tr>
      <td><%= course.name %></td>
      <td><%= course.nearest_start_date %></td>
      <td><%= course.nearest_students_count %></td>
      <td><%= link_to "groups", course_path(course)%></td>
    </tr>
  <% end %>
</table>
